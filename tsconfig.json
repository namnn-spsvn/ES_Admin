{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "fe-base/*": ["./fer-framework/fe-base/*"],
      "fe-global/*": ["./fer-framework/fe-global/*"],
      "fe-cores/*": ["./fer-framework/fe-cores/*"],
      "fe-component/*": ["./fer-framework/fe-component/*"],
      "fe-module-auth/*": ["./fer-framework/fe-module-auth/*"],
      "@/ts-module-chatbot/*": ["./ts-framework/ts-module-chatbot/*"],
      "@/ts-module-home/*": ["./ts-framework/ts-module-home/*"],
      "@/ts-module-flashcard/*": ["./ts-framework/ts-module-flashcard/*"],
      "@/ts-module-skills/*": ["./ts-framework/ts-module-skills/*"],
      "@/ts-module-test/*": ["./ts-framework/ts-module-test/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "ts-framework/ts-module-chatbot/hooks/gemini.js"
  ],
  "exclude": ["node_modules"]
}
